{
  "compilerOptions": {
    "target": "ES2017",                          // Set the target JavaScript version
    "module": "CommonJS",                     // Use CommonJS module system
    "outDir": "./dist",                       // Output compiled JS files to 'dist' folder
    "esModuleInterop": true,                  // Allow importing ES6 modules
    "skipLibCheck": true,
    "strict": true                             // Enable strict type-checking
  },
  "include": ["src/**/*.ts"],                 // Include all TypeScript files in the 'src' folder
  "exclude": ["node_modules"]                 // Exclude the 'node_modules' folder
}
